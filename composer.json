{
    "name": "nilportugues/uuid",
    "type": "library",
    "homepage": "http://nilportugues.com",
    "description" : "Library to encapsulate the latest and more secure Uuid versions",
    "license": "MIT",
    "authors": [
        {
            "name": "Nil Portugués Calderó",
            "email": "contact@nilportugues.com",
            "homepage": "http://nilportugues.com",
            "role": "Lead Developer"
        }
    ],
    "require": {
        "php": ">=5.5",
        "nilportugues/php_backslasher": "^0.2.1"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.2",
        "fiunchinho/phpunit-randomizer": "1.0.*@dev",
        "fabpot/php-cs-fixer": "dev-master",
        "satooshi/php-coveralls": "dev-master"
    },
    "config": {
        "bin-dir": "bin/",
        "preferred-install": "dist"
    },
    "autoload": {
        "psr-4": {
            "NilPortugues\\Uuid\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\NilPortugues\\Uuid\\": "tests/"
        }
    },
    "minimum-stability": "stable"
}
